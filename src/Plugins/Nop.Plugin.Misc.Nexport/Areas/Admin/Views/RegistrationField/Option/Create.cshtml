@model Nop.Plugin.Misc.Nexport.Models.RegistrationField.NexportRegistrationFieldOptionModel

@{
    Layout = "_AdminPopupLayout";

    ViewBag.Title = T("Admin.Customers.Nexport.RegistrationField.Options.AddNew").Text;
}

<form asp-controller="NexportIntegration" asp-action="CreateRegistrationFieldOption"
      asp-route-fieldId="@Context.Request.Query["fieldId"]"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Customers.Nexport.RegistrationField.Options.AddNew")
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.Nexport/Areas/Admin/Views/RegistrationField/Option/_CreateOrUpdate.cshtml", Model)
</form>