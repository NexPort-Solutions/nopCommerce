@using Nop.Plugin.Misc.Nexport.Models
@using Nop.Plugin.Misc.Nexport.Domain.RegistrationField

@model Nop.Plugin.Misc.Nexport.Models.RegistrationField.NexportRegistrationFieldModel

@if (Model.Id > 0)
{
    <div class="panel-body">
        @await Html.PartialAsync("Table", new NexportDataTablesModel
        {
            Name = "registrationfield-options-grid",
            UrlRead = new DataUrl("ListRegistrationFieldOptions", "NexportIntegration",
                new RouteValueDictionary
                {
                    [nameof(Model.RegistrationFieldOptionSearchModel.RegistrationFieldId)] = Model.RegistrationFieldOptionSearchModel.RegistrationFieldId
                }),
            UrlDelete = new DataUrl("DeleteRegistrationFieldOption", "NexportIntegration", null),
            Length = Model.RegistrationFieldOptionSearchModel.PageSize,
            LengthMenu = Model.RegistrationFieldOptionSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
            {
                new ColumnProperty(nameof(NexportRegistrationFieldOption.OptionValue))
                {
                    Title = T("Plugins.Misc.Nexport.RegistrationField.Option.Value").Text
                },
                new ColumnProperty(nameof(NexportRegistrationFieldOption.Id))
                {
                    Title = T("Admin.Common.Edit").Text,
                    Width = "100",
                    ClassName =  NopColumnClassDefaults.Button,
                    Render = new RenderCustom("renderEditNexportRegistrationFieldOption")
                },
                new ColumnProperty(nameof(CustomerAttributeValueModel.Id))
                {
                    Title = T("Admin.Common.Delete").Text,
                    Width = "100",
                    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                    ClassName =  NopColumnClassDefaults.Button
                }
            }
        })
        <script>
            function renderEditNexportRegistrationFieldOption (data, type, row, meta) {
                return '<button onclick=\"javascript:OpenWindow(\'@Url.Content("~/Admin/NexportIntegration/EditRegistrationFieldOption/")' + data + '?btnId=btnRefresh&formId=registrationfield-form\', 800, 400, true); return false;\" class="btn btn-default"><i class="fa fa-pencil"></i>@T("Admin.Common.Edit")</button>';
            }
        </script>
    </div>
    <div class="panel-footer">
        <button type="submit" id="btnAddNewValue" onclick="javascript:OpenWindow('@(Url.Action("CreateRegistrationFieldOption", "NexportIntegration",
                                                                                      new { fieldId = Model.Id, btnId = "btnRefresh", formId = "registrationfield-form" }))', 800, 400, true); return false;" class="btn btn-primary">
            @T("Admin.Customers.Nexport.RegistrationField.Options.AddNew")
        </button>
        <input type="submit" id="btnRefresh" style="display: none" />
        <script>
            $(document).ready(function () {
                $('#btnRefresh').click(function () {
                    updateTable("#registrationfield-options-grid");

                    return false;
                });
            });
        </script>
    </div>
}
else
{
<div class="panel-body">
    @T("Admin.Customers.Nexport.RegistrationField.Options.SaveBeforeEdit")
</div>
}