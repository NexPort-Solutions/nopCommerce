@model Nop.Plugin.Misc.Nexport.Models.SupplementalInfo.NexportSupplementalInfoQuestionModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminPopupLayout.cshtml";

    ViewBag.Title = "Edit";
    Html.SetActiveMenuItemSystemName(NexportDefaults.SUPPLEMENTAL_INFO_MENU_SYSTEM_NAME);
}

<form asp-controller="NexportIntegration" asp-action="EditSupplementalInfoQuestion" method="post" id="edit-supplemental-info-question-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit supplemental info question - @Model.QuestionText
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="ListSupplementalInfoQuestion" asp-controller="NexportIntegration">back to list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="supplemental-info-question-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.Nexport/Views/SupplementalInfo/Question/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="supplemental-info-question-delete" asp-action="DeleteSupplementalInfoQuestion" />