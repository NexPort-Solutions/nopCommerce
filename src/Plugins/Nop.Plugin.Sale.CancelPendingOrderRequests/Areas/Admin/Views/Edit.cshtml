@model Nop.Plugin.Sale.CancelPendingOrderRequests.Models.PendingOrderCancellationRequestModel

@{
    ViewBag.Title = T("Admin.CancellationRequests.EditCancellationRequestDetails").Text;
    Html.SetActiveMenuItemSystemName("Cancellation requests");
}

<form asp-controller="CancelPendingOrderRequests" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.CancellationRequests.EditCancellationRequestDetails")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">back to cancellation request list</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="notify-customer" class="btn bg-aqua">
                <i class="fa fa-envelope-o"></i>
                @T("Admin.CancellationRequests.NotifyCustomer")
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="cancellationrequest-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Sale.CancelPendingOrderRequests/Areas/Admin/Views/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="cancellationrequest-delete" />