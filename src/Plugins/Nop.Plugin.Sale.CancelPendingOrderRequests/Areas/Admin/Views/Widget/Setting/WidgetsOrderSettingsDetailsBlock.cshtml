@using Nop.Services.Common
@using Nop.Core

@inject IGenericAttributeService genericAttributeService
@inject IWorkContext workContext

@model Nop.Plugin.Sale.CancelPendingOrderRequests.Models.CancellationRequestSettingsModel

@{
    const string hideCancellationRequestBlockAttributeName = "OrderSettingsPage.HideCancellationRequestBlock";
    var hideCancellationRequestBlock = genericAttributeService.GetAttribute<bool>(workContext.CurrentCustomer, hideCancellationRequestBlockAttributeName);
}

<nop-panel asp-name="ordersettings-cancellation-request" asp-icon="fa fa-stop-circle"
           asp-title="@T("Admin.Configuration.Settings.Order.CancellationRequestSettings")"
           asp-hide-block-attribute-name="@hideCancellationRequestBlockAttributeName" asp-hide="@hideCancellationRequestBlock" asp-advanced="false">
    @await Html.PartialAsync("~/Plugins/Sale.CancelPendingOrderRequests/Areas/Admin/Views/Setting/_Order.CancellationRequestSettings.cshtml", Model)
</nop-panel>